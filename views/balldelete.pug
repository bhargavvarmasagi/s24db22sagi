extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let _id = toShow._id
    - let ball_type = toShow.ball_type
    - let cost = toShow.cost
    - let material = toShow.material
    - let actionid = "/resource/Balls/" + _id
    script. 
      let scriptActionId = "#{actionid}"

    div
      div.row
        div(class='ballAttr mr-3') Ball id is:
        div #{_id}
      div.row
        div(class='ballAttr mr-3') Ball type is:
        div #{ball_type}
      div.row
        div(class='ballAttr mr-3') Ball cost is:
        div #{cost}
      div.row
        div(class='ballAttr mr-3') Ball material is:
        div #{material}

    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
      function cancel() {
      // Go back to the home page for the costume collection
        window.location.href='/Balls'
      }

      function deleteOnid() {
        const confirmDelete = confirm("Are you sure you want to delete this ball?");
        if (!confirmDelete) {
          return; // Cancel the delete operation
        }

        console.log("starting delete")
        // delete first
        fetch(scriptActionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeded")
          window.location.href='/Balls'
        // TODO handle body
        }).catch((error) => {
        // TODO handle error
          alert("Delete failed " + error )
        });
      }
